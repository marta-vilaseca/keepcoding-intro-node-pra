<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <header>
      <h1><a href="/">Nodepop</a></h1>
    </header>

    <main>
      <% if (anuncios && anuncios.length > 0) { %>
      <section class="productos">
        <% anuncios.forEach(anuncio => { %>
        <article class="producto">
          <span class="producto__precio"><%= anuncio.precio %>â‚¬</span>
          <div class="producto__info">
            <span class="categoria"><%= anuncio.venta ? "Se vende" : "Se busca" %></span>
            <a href="<%= '/' + anuncio._id %>" title="<%= anuncio.nombre %>"><h3><%= anuncio.nombre %></h3></a>
          </div>
          <div class="producto__foto">
            <a href="<%= '/' + anuncio._id %>"><img src="<%= '/images/' + anuncio.foto %>" alt="Imagen de <%= anuncio.nombre %>" /></a>
          </div>
          <ul class="tags">
            <% anuncio.tags.forEach(tag => { %>
            <li class="tag"><a href="?tags=<%= tag %>"><%= tag %></a></li>
            <% }); %>
          </ul>
        </article>
        <% }); %>
      </section>
      <% } else { %>
        <p class="mensaje-no-hay">No hay anuncios disponibles con los criterios especificados.</p>
        <% } %>
    </main>
  </body>
</html>
